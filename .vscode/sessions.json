{
  "$schema": "https://cdn.statically.io/gh/nguyenngoclongdev/cdn/main/schema/v10/terminal-keeper.json",
  "theme": "tribe",
  "active": "default",
  "activateOnStartup": true,
  "keepExistingTerminals": true,
  "sessions": {
    "default": [
      {
        "name": "avacade",
        "autoExecuteCommands": true,
        "icon": "dash",
        "color": "terminal.ansiGreen",
        "commands": [
          "echo hello"
        ]
      },
      [
        {
          "name": "main",
          "icon": "notebook-execute",
          "color": "terminal.ansiGreen",
          "autoExecuteCommands": true,
          "commands": [
            "pnpm run dev"
          ]
        }
      ],
      [
        {
          "name": "app:api",
          "icon": "folder-opened",
          "autoExecuteCommands": true,
          "commands": [
            "cd ./apps/api"
          ]
        }
      ],
      [
        {
          "name": "prisma studio",
          "icon": "database",
          "autoExecuteCommands": true,
          "commands": [
            "cd ./packages/database && pnpm prisma studio"
          ]
        }
      ],
      [
        {
          "name": "package:api",
          "autoExecuteCommands": true,
          "commands": [
            "cd ./packages/api"
          ]
        },
        {
          "name": "package:db",
          "autoExecuteCommands": true,
          "commands": [
            "cd ./packages/database"
          ]
        }
      ]
    ]
  }
}